<Control:MetroWindow
    xmlns:Control="http://metro.mahapps.com/winfx/xaml/controls" x:Class="BingShengReportToBill.MainWindow"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BingShengReportToBill"
    xmlns:converter="clr-namespace:BingShengReportToBill.Converter"
    mc:Ignorable="d"
        Title="炳胜上报账单" Height="350" Width="525" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
    DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Control:MetroWindow.Resources>
        <Style x:Key="AccentedSquareButtonStyle"
           BasedOn="{StaticResource SquareButtonStyle}"
           TargetType="{x:Type ButtonBase}">
            <Setter Property="Background" Value="{DynamicResource AccentColorBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource IdealForegroundColorBrush}" />
        </Style>
        <converter:UploadSuccessConverter x:Key="UploadSuccessConverter"/>
    </Control:MetroWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="日期:" VerticalAlignment="Center" FontSize="16"/>
            <DatePicker x:Name="uploadDatePciker" Margin="3,0,0,0" Width="120" VerticalContentAlignment="Center" FontFamily="Microsoft JhengHei UI Light"
                        SelectedDate="{x:Static sys:DateTime.Now}"/>
            <Button Margin="30,0,0,0" 
                    Width="80" 
                    Content="上  报" 
                    Cursor="Hand"
                    BorderThickness="0"
                    Style="{DynamicResource AccentedSquareButtonStyle}"
                    FontFamily="Microsoft YaHei UI Light" FontSize="16"
                    Command="{Binding UploadCommand}"
                    CommandParameter="{Binding ElementName=uploadDatePciker, Path=SelectedDate}">
            </Button>
        </StackPanel>
        <DataGrid Margin="10" 
                  Grid.Row="1"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AutoGenerateColumns="False"
                  GridLinesVisibility="All"
                  ItemsSource="{Binding Orders, Mode=OneWay}"
                  SelectedItem="{Binding SelectedOrder, Mode=OneWay}"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding UploadTime}" Header="时间" />
                <DataGridTextColumn Binding="{Binding Id}" Header="订单号" />
                <DataGridTextColumn Binding="{Binding UploadSuccess, Converter={StaticResource UploadSuccessConverter}}" Header="状态">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StatusBar Grid.Row="2">
            <StatusBarItem FontSize="16">就绪</StatusBarItem>
            <Separator Background="White" Width="1" Height="15" />
            <StatusBarItem>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="正在上传" VerticalAlignment="Center" FontSize="16"/>
                    <Control:ProgressRing 
                        Margin="3,0,0,0"
                    IsActive="True" 
                    IsLarge="False" 
                    Width="10"
                    Height="10" 
                    Foreground="White"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Control:MetroWindow>
